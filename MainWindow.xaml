<Window x:Class="FinalProject.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Blackjack" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Label Background="DarkGreen" Foreground="White"  Grid.Row="0" Content="♥ ◆ Welcome to Blackjack ♣ ♠" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="32"></Label>
        <Button Name="enter_money_button" Grid.Row="1" Click="EnterMoney_Click" Content="  Enter Amount of Money You're Bringing to The Table Below, then click this button:" FontSize="20"></Button>
        <TextBox Grid.Row="2" Name="money_textbox"></TextBox>
        <Button Name="start_game_button" Grid.Row="3" Content="Start Game" Click="StartGame_Click" FontSize="20"  ></Button>
        <Button Background="DarkGreen" Foreground="White" Name="game_rules_button" Grid.Row="4" Content="Game Rules" Click="GameRules_Click" FontSize="20"></Button>
    </Grid>
</Window>

